(version 1.9.0)

(build
 (progn
  (when
   %{pkg-self:dev}
   (run dune subst))
  (run dune build -p %{pkg-self:name} -j %{jobs} @install)))

(depends
 dune
 ocaml
 fmt
 astring
 cmdliner
 re
 stdlib-shims
 uutf
 ocaml-syntax-shims)

